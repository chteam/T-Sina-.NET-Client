<UserControl x:Class="TSinaApi.Client.LoginBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="67*" />
            <RowDefinition Height="46*" />
            <RowDefinition Height="44*" />
            <RowDefinition Height="143*" />
        </Grid.RowDefinitions>
        <Label Content="用户名" Height="28" HorizontalAlignment="Left" Margin="53,18,0,0" Grid.Row="1" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="99,19,0,0" Name="username" Text="" Grid.Row="1" VerticalAlignment="Top" Width="120" />
        <Label Content="密码" Height="28" HorizontalAlignment="Left" Margin="64,12,0,0" Name="label2" Grid.Row="2" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="99,13,0,0" Name="password"  Grid.Row="2" VerticalAlignment="Top" Width="120" />
        <Button Height="25" Width="70" Content="登录"  Grid.Row="3" Margin="99,15,131,103" Click="LoginEvent"></Button>
    </Grid>
</UserControl>
